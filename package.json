{
  "name": "@verifyforge/sdk",
  "version": "1.0.1",
  "description": "Official TypeScript/JavaScript SDK for VerifyForge Email Validation API",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "verifyforge",
    "email",
    "validation",
    "verification",
    "api",
    "sdk",
    "typescript",
    "javascript"
  ],
  "author": "VerifyForge <contact@verifyforge.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/VerifyForge/typescript-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/VerifyForge/typescript-sdk/issues"
  },
  "homepage": "https://verifyforge.com",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {},
  "engines": {
    "node": ">=16.0.0"
  }
}
